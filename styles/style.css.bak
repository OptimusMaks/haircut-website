@import url("../fonts/fonts.css");

body {
    font: 400 24px "inter", sans-serif;
}

body>* {
    min-height: 500px;
}

header {
    background: #F9E3D3;
}

main {
    background: #FAEEE9;
}

footer {
    background: #FBE9DB;
}

.content {
    max-width: 1070px;
    margin: 0 auto;
}


/*! Заголовок */

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

nav img {
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
}

nav a {
    text-decoration: none;
    font-size: 22px;
    letter-spacing: 0.1em;
    color: #F89D88;
    text-shadow: 3px 3px 4px rgba(235, 121, 121, 0.2);
}


.head {
    letter-spacing: 0.15em;
    color: #2C1708;
    position: relative;
}

.head__title {
    font-family: 'yeseva';
    font-size: 45px;
    line-height: 53px;
}

.head__slogan {
    font-size: 30px;
    line-height: 38px;  
}

.head__discont {
    font-size: 22px;
    line-height: 38px;
}

.head__girl {
    width: 353px;
    height: 353px;
    position: absolute;
    right: 0;
    top: 0;
    background: url("../images/head-girl.png");
    border-radius: 50%;
}

.head__image::before {
    content: "";
    width: 235px;
    height: 290px;
    background: url("../images/head-fig.png");
    top: -50%;
    right: 0;
    position: absolute;
}
.head__image::after {
    content: "";
    width: 235px;
    height: 290px;
    background: url("../images/head-fig.png");
    top: 50%;
    left: 0;
    position: absolute;
    transform: rotate(180deg);
}